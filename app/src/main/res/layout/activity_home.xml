<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToOutline="true">

    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:cardCornerRadius="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="54dp"
        android:clickable="true"
        android:elevation="0.3dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_menu"
            android:id="@+id/iv_menu"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_deliver_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="59dp"
        android:text="DELIVER TO"
        android:gravity="top"
        android:textColor="@color/mainColor"
        android:textStyle="bold"
        />

    <Spinner
        android:id="@+id/sp_place_deliver"
        android:layout_width="120dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="80dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:cardCornerRadius="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="306dp"
        android:layout_marginTop="54dp"
        android:clickable="true"
        android:elevation="0.3dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_bag"
            android:id="@+id/iv_bag"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:cardCornerRadius="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="328dp"
        android:layout_marginTop="50dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/mainColor"
        app:contentPaddingLeft="8dp"
        app:contentPaddingTop="2dp"
        android:elevation="0.3dp"
        >

        <TextView
            android:layout_width="9dp"
            android:layout_height="19dp"
            android:text="2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:id="@+id/tv_bag_noti"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_hello_text"
        android:layout_width="213dp"
        android:layout_height="26dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="123dp"
        android:text="Hey Quang, Good Morning!"
        android:lineSpacingExtra="7sp"
        android:textSize="16sp"
        />
    
    <EditText
        android:id="@+id/et_seachBar"
        android:layout_width="327dp"
        android:layout_height="62dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="165dp"
        android:hint="Search dishes,restaurants "
        android:textColor="@color/searchTextColor"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_search_foreground"
        android:drawablePadding="1dp"
        android:background="@drawable/custom_search"
        android:elevation="0.3dp"
        />

    <TextView
        android:id="@+id/tv_all_categor"
        android:layout_width="132dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:text="ALL Categories"
        android:gravity="top"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tv_see_all"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="288dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="253dp"
        android:text="See All"
        android:drawableRight="@drawable/ic_right_arrow_foreground"
        android:gravity="top"
        android:textSize="16sp"
        android:clickable="true"
        />


</RelativeLayout>