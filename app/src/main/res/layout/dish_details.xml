<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/Xanh_navi">

            <!-- Nút quay lại -->
            <ImageButton
                android:id="@+id/button_back"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/back_button"
                android:scaleType="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>

            <!-- Tiêu đề -->
            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chi tiết món ăn"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:id="@+id/image_food"
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bundau" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_location"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/Xanh_navi"
                    android:drawableLeft="@drawable/ic_action_location"
                    android:text="Narumi's Restaurant"
                    android:textColor="@color/Tim"
                    android:textSize="12sp"
                    android:layout_marginRight="20dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/btn_love"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/icon_love"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:onClick="onLoveButtonClick"/>

                    <TextView
                        android:id="@+id/text_love_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="4dp"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bún đậu mắm tôm"
                android:textSize="30sp"
                android:layout_marginLeft="30dp"
                style="@style/TextAppearance.AppCompat.Body2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bún đậu mắm tôm là một món ăn truyền thống của Việt Nam, kết hợp giữa bún (mì sợi), đậu hũ non và mắm tôm. Món ăn này có hương vị đậm đà và thơm ngon, thường được kèm theo rau sống và gia vị tạo nên sự hấp dẫn."
                android:textSize="18sp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.7"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/ic_star"
                    android:backgroundTint="@color/Xanh_navi"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/ic_delivery"
                    android:backgroundTint="@color/Xanh_navi"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 phút"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/ic_time"
                    android:backgroundTint="@color/Xanh_navi"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nguyên liệu gồm:"
                    android:textSize="25sp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bún"
                            android:textSize="18sp"
                            android:backgroundTint="@color/Cam_nhat"
                            android:textColor="@color/black"
                            android:layout_marginLeft="20dp"
                            />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đậu rán"
                            android:textSize="18sp"
                            android:backgroundTint="@color/Cam_nhat"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thịt luộc"
                            android:textSize="18sp"
                            android:backgroundTint="@color/Cam_nhat"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chả cốm"
                            android:textSize="18sp"
                            android:backgroundTint="@color/Cam_nhat"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chả mỡ"
                            android:textSize="18sp"
                            android:backgroundTint="@color/Cam_nhat"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mắm tôm"
                            android:textSize="18sp"
                            android:backgroundTint="@color/Cam_nhat"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rau sống"
                            android:textSize="18sp"
                            android:backgroundTint="@color/Cam_nhat"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dưa chuột"
                            android:textSize="18sp"
                            android:backgroundTint="@color/Cam_nhat"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size:"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="25sp"
                    android:layout_marginLeft="20dp"/>
                <Button
                    android:id="@+id/btn_size_nho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhỏ"
                    android:textSize="18sp"
                    android:backgroundTint="@color/Hong_phan_nhat"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    />
                <Button
                    android:id="@+id/btn_size_vua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vừa"
                    android:textSize="18sp"
                    android:backgroundTint="@color/Hong_phan_nhat"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    />
                <Button
                    android:id="@+id/btn_size_lon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lớn"
                    android:textSize="18sp"
                    android:backgroundTint="@color/Hong_phan_nhat"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn giá:"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textSize="25sp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_price"
                android:text="25000"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textSize="25sp"
                android:layout_marginLeft="50dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VNĐ"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng:"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/btn_minus"
                style="@style/Widget.Material3.Button.TonalButton.Icon"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="-"
                android:textSize="25sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:layout_marginLeft="20dp"/>

            <Button
                android:id="@+id/btn_plus"
                style="@style/Widget.Material3.Button.TonalButton.Icon"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="+"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thành tiền:"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_sumprice"
                android:text="0"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textSize="25sp"
                android:layout_marginLeft="50dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VNĐ"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm vào giỏ hàng"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/Xanh_navi"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bình luận:"
                android:textSize="25sp"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/anya"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="40dp"
                    android:text="Anya:"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:text="Ngon hơn đồ mẹ nấu!"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/gabimaru"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="40dp"
                    android:text="Gabimaru:"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:text="Vợ tôi rất thích món này!"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_ava"
                    android:layout_marginLeft="30dp"/>
                <EditText
                    android:id="@+id/edit_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập bình luận của bạn"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_submit_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Gửi bình luận"
                android:textSize="18sp"
                android:backgroundTint="@color/Xanh_navi"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
